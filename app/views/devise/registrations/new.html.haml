.devise
  .devise__form
    %h2.ui.header Registro
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'ui large form'}) do |f|
      .ui.segment
        -# = devise_error_messages!
        .field
          .ui.left.input
            = f.text_field :first_name, autofocus: true, placeholder: 'Nombre'
        .field
          .ui.left.input
            = f.text_field :last_name, placeholder: 'Apellido'
        .field
          .ui.left.input
            = f.email_field :email, placeholder: 'Correo electrónico'
        .field
          .ui.left.input
            /
              <haml_silent> if @minimum_password_length </haml_silent><haml_block>
              <em>(<haml_loud> @minimum_password_length </haml_loud> characters minimum)</em>
              </haml_block><br />
            = f.password_field :password, autocomplete: "off", placeholder: 'Contraseña'
        .field
          .ui.left.input
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Repetir contraseña'
        .actions
          = f.submit "Registrarme", class: 'ui fluid large submit button'
    .ui.message.link.items
      = render "devise/shared/links"
