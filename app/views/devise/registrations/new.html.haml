.devise
  .devise__form
    = image_tag 'logo.png', class: 'devise__logo'
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'ui large form'}) do |f|
      .ui.segment
        %h2.ui.header Registro
        = content_tag(:div, flash[:error], :id => "flash_error") if flash[:error]
        = content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice]
        = content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert]
        .field
          .ui.left.input
            = f.text_field :first_name, autofocus: true, placeholder: 'Nombre'
        .field
          .ui.left.input
            = f.text_field :last_name, placeholder: 'Apellido'
        .field
          .ui.left.input
            = f.email_field :email, placeholder: 'Correo electr칩nico'
        .field
          .ui.left.input
            /
              <haml_silent> if @minimum_password_length </haml_silent><haml_block>
              <em>(<haml_loud> @minimum_password_length </haml_loud> characters minimum)</em>
              </haml_block><br />
            = f.password_field :password, autocomplete: "off", placeholder: 'Contrase침a'
        .field
          .ui.left.input
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Repetir contrase침a'
        .actions
          = f.submit "REGISTRARSE", class: 'ui fluid large submit button'
        .devise__link
          = link_to "Iniciar sesi칩n", new_session_path(resource_name)
